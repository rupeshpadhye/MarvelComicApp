<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/product_list_item"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/cardview_default_elevation"
        android:layout_marginBottom="@dimen/cardview_default_elevation">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/product_img"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:contentDescription="@string/action_settings"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="left"
                >
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/cardview_light_background"
                android:layout_below="@+id/product_img"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/app_default_margin"
                 />
          <!--  <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="From 400 Rs"
                android:textColor="@color/cardview_light_background"
                android:layout_below="@+id/product_img"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/app_default_margin"
                 />-->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>